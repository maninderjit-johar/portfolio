---
import DeveloperImg from "../images/dev.svg";
import { Image } from "astro:assets";
import GitHub from "../images/github.svg";
import LinkedIN from "../images/linkedin.svg";
---

<section
  class="h-[calc(100vh-10rem)] md:h-[calc(100vh-5rem)] hero-section px-4"
  id="home"
>
  <div
    class="container mx-auto flex justify-between lg:justify-around items-center mx-width"
  >
    <div
      class="flex justify-center items-center md:items-start flex-col h-lvh -mt-10 md:w-1/2"
    >
      <p class="text-2xl md:text-4xl font-semibold text-center md:text-left">
        Hi, I am Mani Johar
      </p>
      <p
        class="text-4xl md:text-5xl font-bold md:font-semibold mt-2 text-center md:text-left"
      >
        Full Stack Developer
      </p>

      <div class="block md:hidden items-center mt-6" id="#desk">
        <Image
          src={DeveloperImg}
          alt="Developer Programming"
          width={500}
          class="float-animation"
        />
      </div>

      <p class="mt-2 md:text-left text-justify">
        Innovative developer with over 5 years of experience blending
        engineering expertise with a passion for creating user-friendly and
        scalable applications.
      </p>

      <div class="flex gap-4 mt-6">
        <button class="font-bold py-2 px-4 inline-flex items-center">
          <svg
            class="fill-current w-4 h-4 mr-2"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 20 20"
            ><path d="M13 8V2H7v6H2l8 8 8-8h-5zM0 18h20v2H0v-2z"></path></svg
          >
          <span>Resume</span>
        </button>
        <button class="font-bold py-2 px-4 inline-flex items-center">
          <svg
            class="w-4 h-4 me-2"
            aria-hidden="true"
            xmlns="http://www.w3.org/2000/svg"
            fill="currentColor"
            viewBox="0 0 20 20"
          >
            <path
              fill-rule="evenodd"
              d="M10 .333A9.911 9.911 0 0 0 6.866 19.65c.5.092.678-.215.678-.477 0-.237-.01-1.017-.014-1.845-2.757.6-3.338-1.169-3.338-1.169a2.627 2.627 0 0 0-1.1-1.451c-.9-.615.07-.6.07-.6a2.084 2.084 0 0 1 1.518 1.021 2.11 2.11 0 0 0 2.884.823c.044-.503.268-.973.63-1.325-2.2-.25-4.516-1.1-4.516-4.9A3.832 3.832 0 0 1 4.7 7.068a3.56 3.56 0 0 1 .095-2.623s.832-.266 2.726 1.016a9.409 9.409 0 0 1 4.962 0c1.89-1.282 2.717-1.016 2.717-1.016.366.83.402 1.768.1 2.623a3.827 3.827 0 0 1 1.02 2.659c0 3.807-2.319 4.644-4.525 4.889a2.366 2.366 0 0 1 .673 1.834c0 1.326-.012 2.394-.012 2.72 0 .263.18.572.681.475A9.911 9.911 0 0 0 10 .333Z"
              clip-rule="evenodd"></path>
          </svg>
          <span>Github</span>
        </button>
        <button class="font-bold py-2 px-4 inline-flex items-center gap-2">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="16"
            height="16"
            fill="currentColor"
            class="bi bi-linkedin"
            viewBox="0 0 16 16"
          >
            <path
              d="M0 1.146C0 .513.526 0 1.175 0h13.65C15.474 0 16 .513 16 1.146v13.708c0 .633-.526 1.146-1.175 1.146H1.175C.526 16 0 15.487 0 14.854zm4.943 12.248V6.169H2.542v7.225zm-1.2-8.212c.837 0 1.358-.554 1.358-1.248-.015-.709-.52-1.248-1.342-1.248S2.4 3.226 2.4 3.934c0 .694.521 1.248 1.327 1.248zm4.908 8.212V9.359c0-.216.016-.432.08-.586.173-.431.568-.878 1.232-.878.869 0 1.216.662 1.216 1.634v3.865h2.401V9.25c0-2.22-1.184-3.252-2.764-3.252-1.274 0-1.845.7-2.165 1.193v.025h-.016l.016-.025V6.169h-2.4c.03.678 0 7.225 0 7.225z"
            ></path>
          </svg>
          <span>LinkedIn</span>
        </button>
      </div>
    </div>
    <div class="hidden md:flex h-lvh items-center" id="#desk">
      <Image
        src={DeveloperImg}
        alt="Developer Programming"
        width={500}
        class="float-animation"
      />
    </div>
  </div>
</section>
