---
import Aerialytic from "./Aerialytic.astro";
import MarketBox from "./MarketBox.astro";
---

<section class="work-section px-10 pt-28 mx-auto" id="work">
  <div class="flex gap-20 justify-around mx-auto">
    <div class="flex flex-col gap-14 w-full items-center">
      <MarketBox />
      <Aerialytic />
    </div>

    <div class="flex flex-col gap-4">
      <p class="vertical text-2xl uppercase font-extrabold opacity-75">
        Experiences
      </p>

      <div
        class="inline-block h-[100px] mx-auto min-h-[1em] w-0.5 self-stretch bg-neutral-100 dark:bg-white opacity-55"
      >
      </div>
    </div>
  </div>
</section>
