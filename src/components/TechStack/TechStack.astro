---
import Backend from "./Backend.astro";
import Databases from "./Databases.astro";
import Devops from "./Devops.astro";
import Frontend from "./Frontend.astro";
import VersionControl from "./VersionControl.astro";
---

<section class="exp-section px-4 md:px-10 mx-auto" id="tools">
  <div
    class="flex flex-col md:flex-row gap-8 md:gap-24 items-center md:justify-center"
  >
    <div class="flex flex-col gap-4">
      <p
        class="hidden md:block vertical text-2xl uppercase font-extrabold opacity-75"
      >
        Tech Stack
      </p>

      <p class="md:hidden text-2xl uppercase font-extrabold opacity-75">
        Tech Stack
      </p>

      <div
        class="hidden md:inline-block h-[150px] mx-auto min-h-[1em] w-0.5 self-stretch bg-neutral-100 dark:bg-white opacity-55"
      >
      </div>
    </div>

    <div class="flex flex-col gap-6 items-center">
      <Frontend />

      <Backend />

      <Databases />

      <VersionControl />

      <Devops />
    </div>
  </div>
</section>
